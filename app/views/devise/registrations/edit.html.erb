<div class="row">
	<div class="span4">
        <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, html: {class: "well"}) do |f| %>
          <%= devise_error_messages! %>
        
          <fieldset>
			<legend>Edit <%= resource_name.to_s.humanize %></legend>
        
              <%= f.input :email, :autofocus => true %>
            
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
            
              <i>(leave blank if you don't want to change it)</i><br />
              <%= f.input :password, :autocomplete => "off" %>
            
              <%= f.input :password_confirmation %>
            
              <i>(we need your current password to confirm your changes)</i><br />
              <%= f.input :current_password %>
          </fieldset>
        
          <div><%= f.button :submit, "Update" %></div>
        <% end %>
        
        <h3>Cancel my account</h3>
        
        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>
        
        <%= link_to "Back", :back %>
    </div>
</div>